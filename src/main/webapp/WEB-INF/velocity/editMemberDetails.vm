#parse('includes/head.vm')
#navTabs('')

<div class="row">

	<div class="span2 bs-docs-sidebar">
	</div>
	
	<div class="span9">
		<h3>$member.firstName $member.lastName</h3>

		<form method="POST" action="$urlBuilder.editMemberUrl($member)" class="form-horizontal">		
			#springBind("member.firstName")
			<div class="control-group">
				<label class="control-label" for="${status.expression}">First name</label>
				<div class="controls">
					<input id="${status.expression}" name="${status.expression}" placeholder="First name" value="$!{status.value}">
				</div>
			</div>
			
			#springBind("member.lastName")			
			<div class="control-group">
				<label class="control-label" for="${status.expression}">Last name</label>
				<div class="controls">
					<input id="${status.expression}" name="${status.expression}" placeholder="Last name" value="$!{status.value}">
				</div>
			</div>
			
			#springBind("member.emailAddress")			
			<div class="control-group">
				<label class="control-label" for="${status.expression}">Email address</label>
				<div class="controls">
					<input id="${status.expression}" name="${status.expression}" placeholder="Email address" value="$!{status.value}">
				</div>
			</div>
			
			#springBind("member.contactNumber")			
			<div class="control-group">
				<label class="control-label" for="${status.expression}">Contact number</label>
				<div class="controls">
					<input id="${status.expression}" name="${status.expression}" placeholder="Contact number" value="$!{status.value}">
				</div>
			</div>
			
			#textInput('member.registrationNumber', 'Registration number')
			#textInput('member.rowingPoints', 'Rowing points')
			#textInput('member.scullingPoints', 'Sculling points')			
																			
			<div class="control-group">
				<div class="controls">
					<button type="submit" class="btn">Save details</button>
					<a href="$urlBuilder.memberUrl($member)"><button class="btn btn-primary" type="button">Cancel</button></a>					
				</div>
			</div>
		</form>
				
	</div>
</div>
</div>
