#parse('includes/head.vm')
#navTabs('')

<div class="container-fluid">

	<div class="row">
		<div class="col-xs-8">
			<h4>$member.firstName $member.lastName</h4>
		</div>		
	</div>
	<hr/>
	
	<div class="row">
		<div class="col-xs-12">
		
			#springBind("member")
			#foreach($error in $status.errorMessages)
				<div class="alert alert-warning">$error</div>
			#end
			
			<form method="POST" action="$urlBuilder.editMemberUrl($memberId)" class="form-horizontal">				
				#inputRow("member.firstName", "First name")
				#inputRow("member.lastName", "Last name")
				#inputRow("member.emailAddress", "Email address")
				#inputRow("member.contactNumber", "Contact number")
				#inputRow('member.registrationNumber', 'Registration number')
				#inputRow('member.rowingPoints', 'Rowing points')
				#inputRow('member.scullingPoints', 'Sculling points')
				
				#springBind("member.squad")
				<div class="form-group">
				    <label for="currentPassword" class="col-sm-2 control-label">Squad</label>
	    			<div class="col-sm-10">		
	    				<select class="form-control" name="${status.expression}" value="$!{status.value}" placeholder="$label">	
							<option value=""></option>
							#foreach($squad in $squads)
								<option value="$squad.id" #if($squad.id == ${status.value}) SELECTED #end>$squad.name</option>
							#end
						</select>				
					</div>
				</div>
																							
				<div class="control-group">
					<div class="col-sm-2">
					</div>
					<div class="controls">
						<button type="submit" class="btn">Save details</button>
						<a href="$urlBuilder.memberUrl($memberId)"><button class="btn btn-primary" type="button">Cancel</button></a>					
					</div>
				</div>				
			</form>		
			
		</div>
	</div>
</div>
<hr/>

#parse('includes/footer.vm')