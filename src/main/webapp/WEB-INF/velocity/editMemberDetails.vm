#parse('includes/head.vm')
#navTabs('')

<div class="container-fluid">

	<div class="row">
		<div class="col-xs-8">
			<h4>$member.firstName $member.lastName</h4>
		</div>
	</div>
	<hr/>
	
	<div class="row">
		<div class="col-xs-12">
		
			#springBind("member")
			#foreach($error in $status.errorMessages)
				<div class="alert alert-warning">$error</div>
			#end
			
			<form method="POST" action="$urlBuilder.editMemberUrl($memberId)" class="form-horizontal">				
				#inputRow("member.firstName", "First name")
				#inputRow("member.lastName", "Last name")
				#inputRow("member.emailAddress", "Email address")
				#inputRow("member.contactNumber", "Contact number")
				#inputRow("member.emergencyContactName", "Emergency contact name")
				#inputRow("member.emergencyContactNumber", "Emergency contact number")
				#inputRow('member.registrationNumber', 'Registration number')
				
				#springBind("member.rowingPoints")
				<div class="form-group">
				    <label for="currentPassword" class="col-sm-2 control-label">Rowing points</label>
				    <div class="col-sm-10">					
						<select name="${status.expression}" class="form-control">
							<option value=""></option>																	    				
							#foreach($option in $pointsOptions)				
								<option value="$option" #if($status.getValue() == $option) SELECTED #end>$option</option>
							#end
						</select>
					</div>
				</div>
				
				#springBind("member.scullingPoints")
				<div class="form-group">
				    <label for="currentPassword" class="col-sm-2 control-label">Sculling points</label>
				    <div class="col-sm-10">					
						<select name="${status.expression}" class="form-control">
							<option value=""></option>								    				
							#foreach($option in $pointsOptions)				
								<option value="$option" #if($status.getValue() == $option) SELECTED #end>$option</option>
							#end
						</select>
					</div>
				</div>
				
				
				#inputRow('member.sweepOarSide', 'Sweep oar side')				
				#squadsCheckboxGroup
															
				<div class="control-group">
					<div class="col-sm-2">
					</div>
					<div class="controls">
						<button type="submit" class="btn">Update details</button>
						<a href="$urlBuilder.memberUrl($memberId)"><button class="btn btn-primary" type="button">Cancel</button></a>					
					</div>
				</div>				
			</form>		
			
		</div>
	</div>
</div>
<hr/>

#parse('includes/footer.vm')