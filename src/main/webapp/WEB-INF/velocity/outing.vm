#parse('includes/head.vm')
#navTabs('Outings')

<div class="container-fluid">

	<div class="row">
		<div class="col-xs-8">
			<h4>$squad.name outings</h4>
		</div>
		<div class="col-xs-4">
			<div class="pull-right">
				#squadSelect('/outings?squad=', 'Outings')
			</div>
		</div>
	</div>
	<hr/>

	<div class="row">
		<div class="col-xs-3">
			#outingsNav()
		</div>
		
		<div class="col-xs-9">			
			<h4>$dateFormatter.dayMonthYearTime($outing.date)</h4>
			
			<span>
				#if($permissionsHelper.hasOutingPermission($outing, 'EDIT_OUTING'))				
					<a href="$urlBuilder.outingEditUrl($outing)">Edit outing</a>
					#if($outing.closed) 
						| <a href="$urlBuilder.outingReopenUrl($outing)">Reopen outing</a> 
					#else
						| <a href="$urlBuilder.outingCloseUrl($outing)">Close outing</a>
					#end
						| <a href="$urlBuilder.deleteOuting($outing)">Delete outing</a>
				#end
			</span>
			
			<p>$!outing.notes</p>	
		
			#if($outing.closed)
				#parse('includes/closedOuting.vm')
			#end
									
			<table style="font-size: 14px;" class="table table-striped">				
				#foreach($member in $members )					
					<tr>
				    	<td>
				   			#parse('includes/member.vm')
				   		</td>				   		
				   		<td>
				   			$!member.sweepOarSide
				   		</td>
				   		<td>
				   			#set($availability = '')
							#set($availability = $squadAvailability.get(${member.id}))
							#parse('includes/availability.vm')							
						</td>
					</tr>
				#end
			</table>		
		</div>		
	</div>
	
	#if($permissionsHelper.hasOutingPermission($outing, 'EDIT_OUTING'))				
		<div class="row">
			<div class="col-xs-12">
				<p align="right"><a href="$urlBuilder.outingAvailabilityCsv($outing)">Export as CSV</a><p/>
			</div>
		</div>
	#end
	
</div>
<hr/>			

#parse('includes/footer.vm')