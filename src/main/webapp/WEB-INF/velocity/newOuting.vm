#parse('includes/head.vm')
#navTabs('Outings')

<div class="container-fluid">

	<div class="row">
		<div class="col-xs-8">
			<h4>$squad.name outings</h4>
		</div>
		<div class="col-xs-4">
			<div class="pull-right">
				#squadSelect('/outings', 'Outings')
			</div>
		</div>
	</div>
	<hr/>

	<div class="row">
		<div class="col-xs-2">
			#outingsNav()
		</div>
		
		<div class="col-xs-10">		
			<h4>Adding a new outing</h4>
					
			<form class="form-horizontal" role="form" action="$urlBuilder.applicationUrl('/outings/new')" method="POST" accept-charset="UTF-8">			
				#parse('includes/outingForm.vm')
				
				#springBind("outing.repeats")																			
				<div class="form-group">
	    			<div class="col-sm-2"></div>
				    <div class="col-sm-5">
			    		<div class="checkbox">
							<label>
								<input type="checkbox" value="true" name="${status.expression}" #if($status.getValue()) CHECKED #end />
								This outing repeats for the next
							</label>
							<select name="repeatsCount">
						 		<option value="2">2 weeks
						 		<option value="4">4 weeks
						 		<option value="6">4 weeks
						 		<option value="8">8 weeks
						 	</select>
						</div>
						#foreach($error in $status.errorMessages)<div class="alert alert-warning">$error</div>#end						
					</div>
				</div>
				
						
				<div class="control-group">
					<div  class="col-sm-2">
					</div>	
					<div class="controls">
						<button type="submit" class="btn btn-primary">Add outing</button>
						#cancel($urlBuilder.applicationUrl('/outings'))						
					</div>
				</div>
				
			</form>
							
		</div>	
	</div>
</div>
<hr/>

#parse('includes/footer.vm')