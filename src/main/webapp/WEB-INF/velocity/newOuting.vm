#parse('includes/head.vm')
#navTabs('Outings')

<div class="container-fluid">

	<div class="row">
		<div class="col-xs-8">
			<h4>$squad.name outings</h4>
		</div>
		<div class="col-xs-4">
			<div class="pull-right">
				#squadSelect('/outings', 'Outings')
			</div>
		</div>
	</div>
	<hr/>

	<div class="row">
		<div class="col-xs-2">
			#outingsNav()
		</div>
		
		<div class="col-xs-10">		
			<h4>Adding a new outing</h4>			
			<form class="form-horizontal" role="form" action="$urlBuilder.applicationUrl('/outings/new')" method="POST">			
				#parse('includes/outingForm.vm')
				
				<div class="control-group">
					<div  class="col-sm-2">
					</div>	
					<div class="controls">
						<button type="submit" class="btn">Add outing</button>
						<a href="$urlBuilder.applicationUrl('/outings')"><button class="btn btn-primary" type="button">Cancel</button></a>					
					</div>
				</div>
				
			</form>			
		</div>	
	</div>
</div>
<hr/>

#parse('includes/footer.vm')