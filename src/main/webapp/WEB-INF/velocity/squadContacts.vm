#parse('includes/head.vm')
#navTabs('Contacts')

<div class="container-fluid">
		
	#if(!$squads.isEmpty())
	
		<div class="row-fluid">
			<div class="span6">
				<h4>$squad.name contacts</h4>
			</div>
			<div class="span6">
				<div class="pull-right">
					#squadSelect('/contacts', 'Show contacts')
				</div>
			</div>
		</div>
		<hr/>
										
		#if($members.isEmpty()) 
			<p>No members are currently assigned to this squad.</p>								
		#else
			<div class="row-fluid">
				<div class="span4"></div>
				<div class="span4">Email</div>
				<div class="span4">Phone</div>				
			</div>
				
			#foreach( $member in $members )
				<div class="row-fluid">
			    	<div class="span4">
			    		#parse('includes/member.vm')
			    	</div>
			    	<div class="span4">
			    		$!member.emailAddress
			    	</div>
					<div class="span4">
						$!member.contactNumber
					</div>
				</div>
			#end
		#end			
		<hr/>
					
	#else	
		<h4>Contacts</h4>
		<hr/>
		<p>There are currently no squads setup.</p>
		<hr/>
	#end
</div>