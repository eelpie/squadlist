#parse('includes/head.vm')
#navTabs('Squad contacts')

<div class="row">
		
	<div class="span2 bs-docs-sidebar">	
		#squadSideNav('contacts')
	</div>
		
	<div class="span9">
		<h3>$squad.name contacts</h3>
		
		#if($members.isEmpty()) 
			<p>No members are currently assigned to this squad.</p>
						
		#else
			<div class="row">
				<div class="span2"></div>
				<div class="span3">Email</div>
				<div class="span2">Phone</div>				
			</div>
			
			#foreach( $member in $members )
				<div class="row">
			    	<div class="span2">
			    		#parse('includes/member.vm')
			    	</div>
			    	<div class="span3">
			    		$!member.emailAddress
			    	</div>
					<div class="span2">
						$!member.contactNumber
					</div>
				</div>
			#end
		#end
		<hr>
	</div>
	

</div>
</div>
