#parse('includes/head.vm')
#navTabs('Squad contacts')

<div class="row-fluid">
		
	#squadSideNav('contacts')
	
	<div class="span10">
		<h3>$squad.name contacts</h3>
		<hr/>
				
		#if($members.isEmpty()) 
			<p>No members are currently assigned to this squad.</p>
						
		#else
			<div class="row-fluid">
				<div class="span4"></div>
				<div class="span4">Email</div>
				<div class="span4">Phone</div>				
			</div>
			
			#foreach( $member in $members )
				<div class="row-fluid">
			    	<div class="span4">
			    		#parse('includes/member.vm')
			    	</div>
			    	<div class="span4">
			    		$!member.emailAddress
			    	</div>
					<div class="span4">
						$!member.contactNumber
					</div>
				</div>
			#end
		#end
		<hr>
	</div>
	

</div>
</div>
