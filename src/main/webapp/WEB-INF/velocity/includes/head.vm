<html>
<head>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
	<link href="http://im.wellington.gen.nz/static/bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
<div align="right">Logged in as: $loggedInUserService.loggedInUser</div>
<div class="container">

#macro(navTabs $selectedTab) 
	<div class="navbar">
		<div class="navbar-inner">
	    	<ul class="nav">
				<li #if($selectedTab == 'My outings') class="active" #end><a href="$urlBuilder.applicationUrl('')">Outings</a></li>
				<li #if($selectedTab == 'My details') class="active" #end><a href="$urlBuilder.applicationUrl('/member/')${loggedInUser}">My details</a></li>
				<li #if($selectedTab == 'Availability') class="active" #end><a href="$urlBuilder.applicationUrl('/squad/novice-men/availability')">Availability</a></li>
				<li #if($selectedTab == 'Squads') class="active" #end><a href="$urlBuilder.applicationUrl('/squad/novice-men')">Squads</a></li>
				<li #if($selectedTab == 'Entry details') class="active" #end><a href="$urlBuilder.applicationUrl('/squad/novice-men/entrydetails')">Entry details</a></li>
				<li #if($selectedTab == 'Add outing') class="active" #end><a href="$urlBuilder.applicationUrl('/outings/new')">Add outing</a></li>
				<li #if($selectedTab == 'Admin') class="active" #end><a href="$urlBuilder.applicationUrl('/admin')">Admin</a></li>		
			</ul>
		</div>
	</div>	
#end

#macro(squadSideNav $action)
	<ul class="nav nav-list bs-docs-sidenav">
		#if($squads && $squads.size() > 0) 
			#foreach($navSquad on $squads) 
				<li><a href="/squad/${navSquad.id}/${action}">$navSquad.name</a></li>
			#end	
		#end
   	</ul>
#end
 

