#parse('includes/head.vm')
#navTabs('')

<div class="row">

	<div class="span2 bs-docs-sidebar">
	</div>
	
	<div class="span9">
		<h3>Change password</h3>

		<form method="POST" action="$urlBuilder.changePassword()" class="form-horizontal">		
			#springBind("changePassword.currentPassword")
			<div class="control-group">
				<label class="control-label" for="${status.expression}">Current password</label>
				<div class="controls">
					<input id="${status.expression}" name="${status.expression}" placeholder="First name" value="$!{status.value}">
					#foreach($error in $status.errorMessages) <p class="alert">$error</p>#end					
				</div>
			</div>
			
			#springBind("changePassword.newPassword")			
			<div class="control-group">
				<label class="control-label" for="${status.expression}">New password</label>
				<div class="controls">
					<input id="${status.expression}" name="${status.expression}" placeholder="Last name" value="$!{status.value}">
					#foreach($error in $status.errorMessages) <p class="alert">$error</p>#end					
				</div>
			</div>
															
			<div class="control-group">
				<div class="controls">
					<button type="submit" class="btn">Change password</button>
					<a href="$urlBuilder.memberUrl($memberId)"><button class="btn btn-primary" type="button">Cancel</button></a>					
				</div>
			</div>
		</form>
				
	</div>
</div>
</div>
