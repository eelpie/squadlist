#parse('includes/head.vm')
#navTabs('Outings')

<div class="container-fluid">

	<div class="row">
		<div class="col-xs-8">
			<h4>Change password</h4>
		</div>
		
	</div>
	<hr/>

	<div class="row">
			
		<div class="col-xs-12">
		
			#springBind("changePassword")
			#foreach($error in $status.errorMessages) <p class="alert">$error</p>#end
						
			<form method="POST" action="$urlBuilder.changePassword()" class="form-horizontal">
							
				#springBind("changePassword.currentPassword")				
				<div class="form-group">
				    <label for="currentPassword" class="col-sm-2 control-label">Current password</label>
				    <div class="col-sm-10">					
				        <input type="password" class="form-control" name="${status.expression}" placeholder="Current password">				        
				      	#foreach($error in $status.errorMessages) <p class="alert">$error</p>#end				   				
				    </div>
				</div>
					
				#springBind("changePassword.newPassword")				
				<div class="form-group">
				    <label for="newPassword" class="col-sm-2 control-label">New password</label>
				    <div class="col-sm-10">				    
				        <input type="password" class="form-control" name="${status.expression}" placeholder="New password">				        
				      	#foreach($error in $status.errorMessages) <p class="alert">$error</p>#end
				    </div>
				</div>
				
				<div class="control-group">
					<div class="controls">
						<button type="submit" class="btn">Change password</button>
						<a href="$urlBuilder.memberUrl($member)"><button class="btn btn-primary" type="button">Cancel</button></a>					
					</div>
				</div>				
			</form>
				
		</div>	
	</div>
</div>
<hr/>

#parse('includes/footer.vm')


