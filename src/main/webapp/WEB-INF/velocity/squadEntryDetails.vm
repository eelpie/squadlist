#parse('includes/head.vm')
#navTabs('Entry details')

<div class="row-fluid">

	#squadSideNav('entrydetails')
	
	<div class="span10">
		<h3>$squad.name entry details</h3>
		<hr/>
				
		#if($members.isEmpty()) 
			<p>No members are currently assigned to this squad.</p>
			
		#else		
			<div class="row-fluid">
				<div class="span2"></div>
				<div class="span2">Date of birth</div>
				<div class="span2">Weight</div>
				<div class="span2">Rowing pts</div>
				<div class="span2">Sculling pts</div>				
				<div class="span2">Registration</div>					
			</div>
			
			#foreach( $member in $members )			
				<div class="row-fluid">
			    	<div class="span2">#parse('includes/member.vm')</div>
			    	<div class="span2">$!member.dateOfBirth</div>		    	
			    	<div class="span2">$!member.weight</div>
			    	<div class="span2">$!member.rowingPoints</div>
					<div class="span2">$!member.scullingPoints</div>
			    	<div class="span2">$!member.registrationNumber</div>			    	
			    </div>
			#end
		#end
		<hr>				
	</div>
</div>
</div>
