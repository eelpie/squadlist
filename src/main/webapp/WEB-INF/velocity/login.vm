#parse('includes/head.vm')

<div class="container-fluid">

	<div class="row">
		<div class="col-xs-8">
			<h3>Squadlist - $instance.name</h3>
		</div>
	</div>
	<hr/>
		
	<div class="row">		
		<div class="col-xs-12">					
		   	<form action="$urlBuilder.applicationUrl('/j_spring_security_check')" method="POST" class="form-horizontal" accept-charset="UTF-8">		   	   		      							
				<div class="form-group">
				    <label for="currentPassword" class="col-sm-2 control-label">$text.text('username')</label>
				    <div class="col-sm-6">					
				        <input type="text" class="form-control" name="j_username" placeholder="$text.text('username')">				      				      					   				
				    </div>
				</div>
				        
		   	  	<div class="form-group">
				    <label for="currentPassword" class="col-sm-2 control-label">Password</label>
				    <div class="col-sm-6">					
				        <input type="password" class="form-control" name="j_password" placeholder="Password">
				       	<p><a href="$urlBuilder.applicationUrl('/reset-password')">Forgotten your password?</a></p>				     				       	
				    </div>
				</div>
								
				<div class="row">	
					<div class="col-sm-2">
					</div>			   	
				   	<div class="col-sm-6">					
						#if($errors)
					        <div id="alert" class="alert alert-warning">Incorrect username or password</div>
						#end
					</div>					
				</div>
	
				<div class="control-group">
					<div class="col-sm-2">
					</div>	
					<div class="controls">
						<input type="submit" name="login" value="Log In " class="btn btn-primary" />
					</div>
				</div>
				
			
								   	            
		     </form>	     
		</div>		
	</div>
	
	<div class="row">
		<div class="col-sm-2"></div>
		<div class="col-sm-6">
			<p>
			<br/>				
			<p><a href="$urlBuilder.facebookSignin()">Or sign in using a previously linked Facebook account</a></p>
		</div>					
	</div>	
	
	<div class="row">
		<div class="col-sm-2"></div>
		<div class="col-sm-6">
			<p>
			<br/>				
			<p>If you are a $instance.name member who requires access to this copy of Squadlist please contact your coach.</p>
		</div>					
	</div>				
	<hr/>
	
</div>

#parse('includes/footer.vm')