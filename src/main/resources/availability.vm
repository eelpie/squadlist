#parse('includes/head.vm')
#parse('includes/navbar.vm')

<div class="container-fluid">

	#if(!$squads.isEmpty())
				
		<div class="row">
			<div class="col-xs-10">
				<h4>Availability</h4>
			</div>
						
			<div class="col-xs-2">
				<div class="pull-right">
					#squadSelect('/availability/', 'Availability')					
				</div>
			</div>
		</div>		
		<hr/>
		
		<div class="row">				
		
			<div class="col-xs-10">
				#if($outingMonths && !$outingMonths.keySet().isEmpty())		
				<ul class="list-inline">
				
					<li>				
					<a href="$urlBuilder.availability($squad)">
						#if($current)
							<span class="glyphicon glyphicon-chevron-right" style="color: black"></span>
						#end
						$text.text('current')</a>
					</li>
					#foreach($outingMonth in $outingMonths.keySet())
						<li><a href="$urlBuilder.availability($squad, $outingMonth)">															
							#if($outingMonth.equals($month))
								<span class="glyphicon glyphicon-chevron-right" style="color: black"></span>
							#end
							$dateFormatter.month($outingMonth)							
							</a>
						</li>
					#end
				</ul>
				#end
			</div>
		</div>		
		
		<div class="row">
			<div class="col-md-12">
			
				#if($members.isEmpty()) 
					<p>No members are currently assigned to this squad.</p>				
				#else
				
					#if($outings.isEmpty())
						<p>No matching outings</p>
										
					#else
					
						<style>
							.table-nowrap {
								table-layout:fixed;
							}
							.table-nowrap td {
								white-space: nowrap;
								overflow: hidden;
								text-overflow: ellipsis;
							}
						</style>					
								
						<table class="table table-striped table-nowrap">
							<thead>
								<th></th>
								#foreach($outing in $outings) 
									<td>
										#parse('includes/outing-header.vm')
										<br/>$!outing.notes
									</td>
								#end
							</thead>
					
							#foreach($displayMember in $members)
								<tr>				
									<td>#parse('includes/displayMember.vm')</td>
									#foreach($outing in $outings)
										#set($availability = '')
										#set($key = "${outing.id}-$displayMember.member.id")
										#set($availability = $squadAvailability.get($key))
										<td>
											#parse('includes/availability.vm')
										</td>
									#end
								</tr>
							#end
						</table>
						
					#end			
				#end
			</div>
		</div>
		
	#else				
		<div class="row">
			<div class="col-md-12">
				<h4>Availability</h4>
				<hr/>
				<p>There are currently no squads setup.</p>
			</div>
		</div>
	#end
	
</div>
<hr/>

#parse('includes/footer.vm')